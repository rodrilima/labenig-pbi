/// Tabela auxiliar para controle de navegação entre módulos
table navegacao_modulos
	isHidden
	lineageTag: b14f7032-38d8-4a99-b9aa-17f8505453c5

	/// Retorna o módulo ativo atual
	measure NAV_ModuloAtual =
			// Detecta qual módulo está ativo baseado no nome da página atual
			VAR PaginaAtual = SELECTEDVALUE('navegacao_modulos'[modulo_nome])
			RETURN
			IF(
			    ISBLANK(PaginaAtual),
			    "Home",
			    PaginaAtual
			)
		isHidden
		lineageTag: 6e0376ee-d296-475e-818f-8f6d3b6d7679

	/// Total de módulos principais
	measure NAV_TotalModulos =
			// Total de módulos no menu
			COUNTROWS('navegacao_modulos')
		isHidden
		lineageTag: 3154c88c-4bef-4ffb-86a3-1ca1c0497998

	column ordem
		dataType: string
		lineageTag: 30cd0d91-cf04-4bda-bd9d-1d9d7bdd218d
		summarizeBy: none
		sourceColumn: ordem

		annotation SummarizationSetBy = Automatic

	column modulo_id
