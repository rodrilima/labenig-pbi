		annotation SummarizationSetBy = Automatic

	partition navegacao_modulos = m
		mode: import
		source =
				let
				    Fonte = Table.FromRecords({
				        [ordem = 1, modulo_id = "Home", modulo_nome = "Home", pagina_destino = "Home"],
				        [ordem = 2, modulo_id = "Financeiro", modulo_nome = "Financeiro", pagina_destino = "FIN - Caixa & Liquidez"],
				        [ordem = 3, modulo_id = "Vendas", modulo_nome = "Vendas", pagina_destino = "VEN - Atacado Visão Geral"],
